<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/ll_main_1"
                  android:layout_marginRight="10dp"
                  android:layout_marginLeft="10dp"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/shape_my_task_bg"
                  android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="match_parent"

                        android:layout_height="wrap_content">
            <View android:layout_width="10dp"
                  android:id="@+id/view_1"
                  android:background="@drawable/shape_my_task_left_bg"
                  android:layout_height="30dp"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/main_black"
                      android:layout_toRightOf="@id/view_1"
                      android:id="@+id/tv_name"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/tv_is_vip"
                      android:background="@mipmap/detail_vip"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:layout_marginRight="10dp"
                      android:textSize="12sp"
                      android:padding="2dp"
                      android:textColor="@color/register_title_bg"
                      android:layout_height="wrap_content"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:background="@color/main_btn_bg"
              android:layout_height="0.5dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_marginRight="10dp"
                      android:layout_marginLeft="10dp"
                      android:orientation="vertical"
                      android:layout_height="52dp">
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/main_black"
                      android:layout_marginTop="5dp"
                      android:id="@+id/tv_phone"
                      android:drawablePadding="5dp"
                      android:text="时间：2016-10-25"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/main_black"
                      android:layout_marginTop="5dp"
                      android:id="@+id/tv_business"
                      android:drawablePadding="5dp"
                      android:text="居住地点：深圳市罗湖区国贸大厦B座508"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:layout_height="wrap_content"/>
            <!--android:drawableLeft="@mipmap/ic_my_task_loc"-->
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/main_black"
                      android:layout_marginTop="5dp"
                      android:id="@+id/tv_create_time"
                      android:visibility="gone"
                      android:drawableLeft="@mipmap/ic_my_task_time"
                      android:drawablePadding="5dp"
                      android:text="时间：2016-10-25"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="10dp"
                      android:layout_height="wrap_content"/>

            <!--android:drawableLeft="@mipmap/ic_my_task_time"-->
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>